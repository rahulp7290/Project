<% layout("/layouts/boilerplate") %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow rounded-4 p-4">
        <h3 class="mb-4 text-center">Create a New Listing</h3>

        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="e.g. Sharma Building Room" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" rows="3" required></textarea>
            <div class="valid-feedback">Please enter a short description.</div>
          </div>

          <!-- Image -->
          <!-- <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input name="listing[image]" placeholder="https://example.com/room.jpg" type="text" class="form-control" required>
            <div class="valid-feedback">Image URL looks good!</div>
          </div> -->

          <!-- Image -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]"  type="file" class="form-control" required>
            <div class="valid-feedback">Image URL looks good!</div>
          </div>


          <!-- Price and Country -->
          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Price (â‚¹)</label>
              <input name="listing[price]" placeholder="2000" type="number" class="form-control" required>
              <div class="invalid-feedback">Please enter a valid price.</div>
            </div>
            <div class="col-md-8 mb-3">
              <label for="country" class="form-label">Country</label>
              <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
              <div class="valid-feedback">Country name looks good.</div>
            </div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Shastri Nagar, Jabalpur" type="text" class="form-control" required>
            <div class="valid-feedback">Location is valid.</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mt-4">
            <button class="btn btn-success btn-lg shadow-sm" type="submit">Add Listing</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
