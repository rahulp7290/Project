\<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Edit Profile</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .profile-card {
            max-width: 500px;
            width: 100%;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
        }
        .profile-card-title {
            font-weight: 700;
            color: #333;
        }
        .btn-primary {
            background: linear-gradient(45deg, #0d6efd, #0dcaf0);
            border: none;
        }
    </style>
</head>
<body>
  <% layout("/layouts/boilerplate") %>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
      <div class="card profile-card">
          <div class="card-body p-4 p-md-5">
              <h3 class="text-center mb-4 profile-card-title">Edit Your Profile</h3>

              <form action="/users/<%= user._id %>/edit" method="POST">
                  <!-- Username Input -->
                  <div class="input-group mb-4">
                      <span class="input-group-text bg-light border-end-0">
                          <i class="bi bi-person-fill text-muted"></i>
                      </span>
                      <div class="form-floating">
                          <input type="text" name="username" id="username" class="form-control border-start-0" value="<%= user.username %>" placeholder="Username" required />
                          <label for="username">Username</label>
                      </div>
                  </div>

                  <!-- Email Input -->
                  <div class="input-group mb-4">
                      <span class="input-group-text bg-light border-end-0">
                          <i class="bi bi-envelope-fill text-muted"></i>
                      </span>
                      <div class="form-floating">
                          <input type="email" name="email" id="email" class="form-control border-start-0" value="<%= user.email %>" placeholder="Email" required />
                          <label for="email">Email</label>
                      </div>
                  </div>

                  <!-- Submit Button -->
                  <div class="d-grid mt-4">
                      <button type="submit" class="btn btn-primary btn-lg fw-bold">Update Profile</button>
                  </div>
              </form>
          </div>
      </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
